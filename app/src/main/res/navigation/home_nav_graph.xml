<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.gokselkoc.tmdb.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_contentDetailFragment"
            app:destination="@id/contentDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_tvShowsDetailFragment"
            app:destination="@id/tvShowsDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/contentDetailFragment"
        android:name="com.gokselkoc.tmdb.ui.detail.movie.ContentDetailFragment"
        android:label="ContentDetailFragment"
        tools:layout="@layout/fragment_content_detail">
        <action
            android:id="@+id/action_contentDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/tvShowsDetailFragment"
        android:name="com.gokselkoc.tmdb.ui.detail.tvshows.TvShowsDetailFragment"
        android:label="TvShowsDetailFragment" >
        <action
            android:id="@+id/action_tvShowsDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>